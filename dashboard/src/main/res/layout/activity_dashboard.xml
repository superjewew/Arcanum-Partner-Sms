<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.mahavira.partnersms.dashboard.presentation.DashboardActivity">

        <Button
            android:id="@+id/partner_list_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partner List"/>

        <Button
            android:id="@+id/add_product_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/partner_list_btn"
            android:text="View Products"/>

        <Button
            android:id="@+id/view_request_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/add_product_btn"
            android:text="View Return Request"/>

    </android.support.constraint.ConstraintLayout>
</layout>
